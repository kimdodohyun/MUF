<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainTheme"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="프로필 편집"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myNicknameInEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Nickname"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/myProfilePictureInEdit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_baseline_portrait_24" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/myProfileMusicImageInEdit"
                    android:background="@drawable/ic_baseline_album_24"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/cover_art_description"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/myProfileMusicTitleInEdit"
                        android:textColor="@color/white"
                        android:text="프로필 뮤직을 설정해 주세요"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:scrollHorizontally="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/myProfileMusicArtistInEdit"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="top"
                        android:scrollHorizontally="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/editTextInEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="닉네임 수정"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSetProfileMusic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="프로필 뮤직 수정"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSetProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="프로필 사진 수정"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSetCompleteInEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>